{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ESNext",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "dom"
    ],
    "rootDir": "./"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}